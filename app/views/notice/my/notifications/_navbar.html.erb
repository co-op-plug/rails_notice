<div class="ui tabular top attached menu">
  <%= link_to t('notice.my.notifications.index.title'), notifications_path(receiver: params[:receiver]), class: active_helper(notifications: 'index', active_class: 'item active', item_class: 'item') %>
  <%= link_to t('notice.my.notification_settings.show.title'), notification_settings_path(receiver: params[:receiver]), class: active_helper(controllers: ['notification_settings']) %>
  <div class="right menu">
    <% unless params[:scope] == 'have_read' %>
    <%= link_to read_all_notifications_path(receiver: params[:receiver]), class: 'item', remote: true do %>
      <i class="checkmark box icon"></i><%= t('.read_all') %>
    <% end %>
    <% end %>
  </div>
</div>


