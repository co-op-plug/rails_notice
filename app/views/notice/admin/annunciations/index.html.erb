<%= render 'filter' %>

<table class="ui bottom attached selectable table">
  <thead>
    <tr>
      <th><%= Annunciation.human_attribute_name(:id) %></th>
      <th><%= Annunciation.human_attribute_name(:title) %></th>
      <th><%= Annunciation.human_attribute_name(:body) %></th>
      <th><%= Annunciation.human_attribute_name(:link) %></th>
      <th><%= Annunciation.human_attribute_name(:state) %></th>
      <th>Publish</th>
      <th>
        <%= link_to new_admin_annunciation_path, class: 'ui mini primary button' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @annunciations.each do |annunciation| %>
    <tr>
      <td><%= annunciation.id %></td>
      <td><%= annunciation.title %></td>
      <td><%= annunciation.body %></td>
      <td><%= annunciation.link %></td>
      <td><%= annunciation.state_i18n %></td>
      <td>
        <% unless annunciation.published? %>
        <%= link_to publish_admin_annunciation_path(annunciation), method: :patch, data: { tooltip: '发布' }, class: 'ui pink mini icon button' do %>
          <i class="fas fa-bullhorn"></i>
        <% end %>
        <% end %>
      </td>
      <td>
        <%= link_to admin_annunciation_path(annunciation), data: { tooltip: t('.show') }, class: 'ui mini circular icon button' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to edit_admin_annunciation_path(annunciation), data: { tooltip: t('.edit') }, class: 'ui mini circular icon button' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_annunciation_path(annunciation), method: :delete, data: { tooltip: t('.destroy'), confirm: t('.confirm') }, class: 'ui mini circular icon button' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @annunciations %>
